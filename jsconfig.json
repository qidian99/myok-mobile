{
  "compilerOptions": {
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "components": [
        "./src/components/*"
      ],
      "constants": [
        "./src/constants/*"
      ],
      "navigation": [
        "./src/navigation/*"
      ],
      "reducers": [
        "./src/reducers/*"
      ],
      "styles": [
        "./src/styles/*"
      ],
      "theme": [
        "./src/theme/*"
      ],
      "util": [
        "./src/util/*"
      ],
      "views": [
        "./src/views/*"
      ],
      "sagas": [
        "./src/sagas/*"
      ],
      "assets": [
        "./src/assets/*"
      ],
    },
  },
  "include": [
    "src/**/*",
    "babel.config.js"
  ]
}
